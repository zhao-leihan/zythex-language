{
  "name": "zythex",
  "displayName": "Zythex_extension",
  "publisher": "Zhao-hann",
  "description": "Language support and custom icon for Zythex (.zthx) files, used for writing logic and smart contracts in Zytherion.",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:zythex",
    "onCommand:zythex.runFile"
  ],
  "main": "./dist/extension.js",
  "contributes": {
      "languages": [
        {
          "id": "zythex",
          "aliases": ["Zythex"],
          "extensions": [".zthx"],
          "configuration": "./language-configuration.json"
        }
      ],
      "grammars": [
        {
          "language": "zythex",
          "scopeName": "source.zythex",
          "path": "./syntaxes/zythex.tmLanguage.json"
        }
      ],
      "snippets": [
        {
          "language": "zythex",
          "path": "./snippets/zythex.code-snippets"
        }
      ],
      "fileIcons": [
        {
          "fileExtensions": ["zthx"],
          "icon": "zythex-icon",
          "iconPath": "icons/zythex.png"
        }
      ],
      "themes": [
        {
          "label": "Zythex Dark",
          "uiTheme": "vs-dark",
          "path": "./themes/zythex-dark-color-theme.json"
        }
      ],
      "commands": [
        {
          "command": "zythex.runFile",
          "title": "â–¶"
        }
      ],
      "menus": {
        "editor/title": [
          {
            "command": "zythex.runFile",
            "when": "resourceLangId == zythex",
            "group": "navigation"
          }
        ],
      "commandPalette": [
          {
            "command": "zythex.runFile",
            "when": "resourceLangId == zythex"
          }
        ]
      }

    },
  "icon": "icons/zythex.png",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  },
  "license": "MIT"
}
